<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardCornerRadius="0dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="false">

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="100">

            <com.duy.ncalc.view.CalculatorEditText
                android:id="@+id/txtDisplay"
                style="@style/AppTheme.EditText.Formula"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="50"
                android:scrollbarAlwaysDrawVerticalTrack="true"
                android:scrollbarStyle="outsideOverlay"
                android:scrollbars="vertical"
                android:textSize="30sp"
                tools:text="1+1+3+4+5/12312" />


            <com.duy.ncalc.view.MathFormulaView
                android:id="@+id/math_view"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_weight="50"
                android:weightSum="1"
                app:engine="KaTeX" />

        </LinearLayout>


        <include
            layout="@layout/layout_tool_equation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:visibility="gone" />

        <FrameLayout
            android:id="@+id/the_clear_animation"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </FrameLayout>
</android.support.v7.widget.CardView>
